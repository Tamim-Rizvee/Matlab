clc;
clear all;
close all;

bitstream = load('input.txt');
%step basic parameters
fc = 5;
tb = 1;
fs = 100;
t = 0 : 1/fs : tb-(1/fs);
A = 5;
ASK = [];

%implementation
for i = 1:length(bitstream)
    if bitstream(i) == 1
        ask =2* A * cos(2*pi*fc*t);
    else 
        ask = .5 * A * cos(2 * pi * fc * t);
    end
    ASK = [ASK ask];
end

plot(ASK , 'hash');